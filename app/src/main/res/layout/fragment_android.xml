<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".AndroidFragment">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/textviewAndroid"
        android:textSize="40sp"
        android:textColor="#f20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android fragment" />
    <EditText
        android:id="@+id/edittextAndroid"
        android:layout_marginTop="100dp"
        android:layout_below="@id/textviewAndroid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/buttonAndroid"
        android:text="Send"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edittextAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>